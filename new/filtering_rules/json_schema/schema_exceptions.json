{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/op-cellar-git/eurlex-xml-format/master/new/filtering_rules/json_schema/schema_exceptions.json",
    "type": "object",
    "title": "Exceptional embedding rules",
    "description": "Additional configuration file to drive some exceptional behaviors in the embedding policies",
    "default": {},
    "required": [
        "exceptions"
    ],
    "properties": {
        "exceptions": {
            "$id": "#/properties/exceptions",
            "type": "array",
            "title": "Exceptional behaviors",
            "description": "With the following rules Eurlex gets specific behaviors relative to specific classes and/or properties involved in the embedding",
            "default": [],
            "additionalItems": false,
            "items": {
                "$id": "#/properties/exceptions/items",
                "anyOf": [
                    
                    {
                        "$id": "#/properties/exceptions/items/anyOf/1",
                        "type": "object",
                        "title": "Exceptional rules",
                        "description": "Exceptional rules consist of a class to embed that has some specific properties to embed or to index. Optionally a specific property that points to the class is settable.",
                        "default": {},
                        "required": [
                            "class",
                            "level",
                            "targets_in_embedded_notice",
                            "targets_to_be_indexed"
                        ],
                        "properties": {
                            "property": {
                                "$id": "#/properties/exceptions/items/anyOf/1/properties/property",
                                "type": "string",
                                "title": "property",
                                "description": "The specific property to expand in the embedding policies. This field is not mandatory.",
                                "default": ""
                            },
                            "class": {
                                "$id": "#/properties/exceptions/items/anyOf/1/properties/class",
                                "type": "string",
                                "title": "class",
                                "description": "The owl class for which the embedding policy must follow a particular behavior. This field is mandatory.",
                                "default": ""
                            },
                            "level": {
                                "$id": "#/properties/exceptions/items/anyOf/1/properties/level",
                                "type": "array",
                                "title": "level",
                                "description": "This field indicates at what level of the FRBR (or dossier/event) the exception is valid. This field is mandatory.",
                                "default": [],
                                "additionalItems": false,
                                "items": {
                                    "$id": "#/properties/exceptions/items/anyOf/1/properties/level/items",
                                    "anyOf": [
                                        {
                                            "$id": "#/properties/exceptions/items/anyOf/1/properties/level/items/anyOf/0",
                                            "type": "string",
                                            "title": "level",
                                            "description": "A list of levels from the FRBR hierarchy or dossier/event.",
                                            "default": ""
                                        }
                                    ]
                                }
                            },
                            "targets_in_embedded_notice": {
                                "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_in_embedded_notice",
                                "type": "array",
                                "title": "targets_in_embedded_notice",
                                "description": "This is a list of properties that must exceptionally be embedded in the context defined by `class`, `level` and the `property` to expand. In case this list is empty Cellar will embed only the URI and the relative SAMEAS. This field is mandatory.",
                                "default": [],
                                "additionalItems": false,
                                "items": {
                                    "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_in_embedded_notice/items",
                                    "anyOf": [
                                        {
                                            "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_in_embedded_notice/items/anyOf/0",
                                            "type": "string",
                                            "title": "",
                                            "description": "a list of URIs that exceptionally must be in the embedded notice.",
                                            "default": ""
                                        }
                                    ]
                                }
                            },
                            "targets_to_be_indexed": {
                                "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_to_be_indexed",
                                "type": "array",
                                "title": "targets_to_be_indexed",
                                "description": "It is analogous to `targets_in_embedded_notice` for the indexation.",
                                "default": [],
                                "additionalItems": false,
                                "items": {
                                    "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_to_be_indexed/items",
                                    "anyOf": [
                                        {
                                            "$id": "#/properties/exceptions/items/anyOf/1/properties/targets_to_be_indexed/items/anyOf/0",
                                            "type": "string",
                                            "title": "The first anyOf schema",
                                            "description": "a list of URIs that exceptionally must be indexed from the embedded notice",
                                            "default": ""
                                        }
                                    ]
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}